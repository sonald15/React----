// Sorting function
// if a - b is (-ve) then small first and bigger value second
// if a - b is (+ve) then it interchanges the position
const arr = [3, 6, 4, 8, 6, 9, 1];
const sorted_arr = arr.sort((a, b) => a - b); // it sorts the array in ascending order
sorted_arr;

const sorted_arr2 = arr.slice().sort((a, b) => a - b); // it sorts the copy of arr array not the original one 
sorted_arr2;
arr


